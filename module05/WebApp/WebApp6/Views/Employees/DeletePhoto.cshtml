@model WebApp6.Models.EmployeeViewModel

@{
    ViewData["Title"] = "DeletePhoto";
}

<h1>DeletePhoto</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Deleting avatar</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
